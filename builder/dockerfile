FROM lunamidori5/pixelarch:emerald

RUN sudo sed -i 's/Emerald/Game Builder/g' /etc/os-release

WORKDIR /game

RUN sudo echo "[multilib]" >> /etc/pacman.conf
RUN sudo echo "Include = /etc/pacman.d/mirrorlist" >> /etc/pacman.conf

RUN yay -Syu --noconfirm wine && yay -Yccc --noconfirm

COPY builder.sh .

RUN chmod +x builder.sh
CMD ./builder.sh